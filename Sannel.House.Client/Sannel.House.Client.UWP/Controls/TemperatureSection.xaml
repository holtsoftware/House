<UserControl
	x:Class="Sannel.House.Client.UWP.Controls.TemperatureSection"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Sannel.House.Client.UWP.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<Grid Background="#880000FF">
		<StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" Orientation="Vertical">
			<TextBlock Text="{Binding CoolTemperatureC, Converter={StaticResource TemperatureConverter}}">2</TextBlock>
			<TextBlock>/</TextBlock>
			<TextBlock Text="{Binding CoolTemperatureF, Converter={StaticResource TemperatureConverter}}">2</TextBlock>
		</StackPanel>
	</Grid>
</UserControl>
