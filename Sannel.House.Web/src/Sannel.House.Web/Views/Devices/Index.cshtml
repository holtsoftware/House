<div class="row">
    <div class="col-xs-12">
        <h1>Devices</h1>
    </div>
    <div class="col-xs-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: Devices">
                <tr>
                    <td data-bind="text: Id"></td>
                    <td data-bind="text: Name"></td>
                    <td data-bind="text: Description"></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-xs-12">
        <h5>Create/Edit Device</h5>
        <div class="form-group">
            <label for="name">Name:</label>
            <input name="name" id="DeviceName" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea name="description" id="DeviceDescription" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <button class="form-control" id="AddDeviceButton">Add</button>
        </div>
    </div>
</div>



@section scripts{
<script type="text/javascript">
    /// <reference path="/wwwroot/js/site.js" />
    var vm = new DevicesViewModel();
    ko.applyBindings(vm);
    vm.loadDevices();
</script>
}