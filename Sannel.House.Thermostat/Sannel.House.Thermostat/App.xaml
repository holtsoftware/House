<cm:CaliburnApplication
    x:Class="Sannel.House.Thermostat.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sannel.House.Thermostat"
    xmlns:cm="using:Caliburn.Micro"
    xmlns:converters="using:Sannel.House.Thermostat.Converters"
    RequestedTheme="Dark">
    <cm:CaliburnApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///AppStyle.xaml" />
                <ResourceDictionary>
                    <converters:BooleanNotVisibilityConverter x:Key="BooleanNotVisibilityConverter" />
					<converters:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter" />
				</ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </cm:CaliburnApplication.Resources>
</cm:CaliburnApplication>
